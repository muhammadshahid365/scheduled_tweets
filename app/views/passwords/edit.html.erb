<%= form_with url: password_path, method: :patch do |form| %>
  <div class="mb-3">
    <%= form.label :current_password %>
    <%= form.password_field :current_password, class: 'form-control', placeholder: 'Enter your password'%>
  </div>
  <div class="mb-3">
    <%= form.label :password, 'New password' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Enter new password'%>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation, 'Confirm Password' %>
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Re-enter new password'%>
  </div>
  <div class="mb-3">
    <%= form.submit 'Update Password', class: 'btn btn-primary' %>
  </div>
<% end %>
